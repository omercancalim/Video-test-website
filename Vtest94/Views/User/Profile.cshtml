@model Vtest94.Models.User

@{
    ViewData["Title"] = "User Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
}

<div class="h-100">
    <div class="d-flex justify-content-center">
        <div class="col">
            <div class="card custom-card-profile text-white">
                <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                    <div class="ms-4 mt-5 mb-3 d-flex" style="width:136px">
                        <img src="~/thumbnails/thumbnail_1034e494-3121-43c2-a06a-741f0db247ac.jpg" alt="@Model.UserName" class="img-fluid h-100 w-auto custom-circle-img"
                             style="width: 150px; z-index: 1">
                    </div>
                    <div class="ms-3" style="margin-top:120px;">
                        <h5>@Model.FirstName @Model.LastName</h5>
                        <p style="margin:0">Email: @Model.Email</p>
                    </div>
                </div>
                <div class="p-4 text-black bg-body-tertiary">
                    <div class="d-flex justify-content-end text-center py-1 text-body">
                        <div>
                            <p class="mb-1 h5">@Model.Videos.Count</p>
                            <p class="small text-muted mb-0">Videos</p>
                        </div>
                        <div class="px-3">
                            <p class="mb-1 h5">5</p>
                            <p class="small text-muted mb-0">Followers</p>
                        </div>
                        <div>
                            <p class="mb-1 h5">6</p>
                            <p class="small text-muted mb-0">Following</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 text-black" style="background-color:white; border-bottom-left-radius:6px; border-bottom-right-radius:6px;">
                    <div class="mb-5 text-body">
                        <p class="lead fw-normal mb-1">About</p>
                        <div class="p-4 bg-body-tertiary">
                            <p class="font-italic mb-1">Web Developer</p>
                            <p class="font-italic mb-1">Lives in New York</p>
                            <p class="font-italic mb-0">Photographer</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4 text-body">
                        <p class="lead fw-normal mb-0">Recent Videos</p>
                        <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
                    </div>
                    <div class="row g-2">
                        @foreach (var video in Model.Videos)
                        {
                            <div class="col mb-2">
                                <a asp-controller="Video" asp-action="Details" asp-route-id="@video.Id">
                                    <img src="@Url.Content($"~/thumbnails/{video.ThumbnailName}")" alt="@video.Title" class="w-100 rounded-3">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
